<%- include("../partials/header", {title: 'Admin Dashboard'}) %>
<%- include("../partials/loginnav") %>
<main>
  <section class="teachers">
    <div class="container  py-5 my-5">
        <header class="header">
                <h2 class="text-center">ADMIN INFORMATION</h2>
        </header>
        <div class="row justify-content-center g-4">
          <div class="row g-4 justify-content-center">
            <div class="col-md-6 col-lg-3">
              <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                  <h5 class="card-title fw-bold mb-3">Registered Users</h5>
                  <p class="card-text text-muted">View the complete list of users who have signed up.</p>
                  <form action="/listUsers" method="GET">
                    <button type="submit" class="btn btn-primary rounded-pill px-4">View Users</button>
                  </form>
                </div>
              </div>
            </div>
          
            <div class="col-md-6 col-lg-3">
              <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                  <h5 class="card-title fw-bold mb-3">Active Sessions</h5>
                  <p class="card-text text-muted">Monitor currently active user sessions and status.</p>
                  <form action="/activeSessions" method="GET">
                    <button type="submit" class="btn btn-primary rounded-pill px-4">View Sessions</button>
                  </form>
                </div>
              </div>
            </div>
          </div> 
      </div>
      <form action="/logout" method="POST">
        <a href="/login"><button class="btn btn-outline-primary">Logout</button></a>
      </form>
    </div>

  </section>
 
</main>